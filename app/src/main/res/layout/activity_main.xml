<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/dummyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click plot when you are done  :)" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="326dp">

            <EditText
                android:id="@+id/y6"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/x6"
                app:layout_constraintStart_toEndOf="@+id/x6"
                app:layout_constraintTop_toTopOf="@+id/x6" />

            <EditText
                android:id="@+id/y4"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/y5"
                app:layout_constraintEnd_toEndOf="@+id/y5"
                app:layout_constraintStart_toStartOf="@+id/y5"
                app:layout_constraintTop_toBottomOf="@+id/y3" />

            <EditText
                android:id="@+id/y3"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/y4"
                app:layout_constraintEnd_toEndOf="@+id/y4"
                app:layout_constraintStart_toStartOf="@+id/y4"
                app:layout_constraintTop_toBottomOf="@+id/y2" />

            <EditText
                android:id="@+id/y2"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/y3"
                app:layout_constraintEnd_toEndOf="@+id/y3"
                app:layout_constraintStart_toStartOf="@+id/y3"
                app:layout_constraintTop_toBottomOf="@+id/y1" />

            <EditText
                android:id="@+id/y1"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/x1"
                app:layout_constraintEnd_toEndOf="@+id/y2"
                app:layout_constraintStart_toEndOf="@+id/x1"
                app:layout_constraintTop_toTopOf="@+id/x1" />

            <EditText
                android:id="@+id/x6"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point6"
                app:layout_constraintStart_toEndOf="@+id/point6"
                app:layout_constraintTop_toTopOf="@+id/point6" />

            <EditText
                android:id="@+id/x1"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point1"
                app:layout_constraintStart_toEndOf="@+id/point1"
                app:layout_constraintTop_toTopOf="@+id/point1" />

            <EditText
                android:id="@+id/y5"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/y6"
                app:layout_constraintEnd_toEndOf="@+id/y6"
                app:layout_constraintStart_toStartOf="@+id/y6"
                app:layout_constraintTop_toBottomOf="@+id/y4" />

            <EditText
                android:id="@+id/x4"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point4"
                app:layout_constraintStart_toEndOf="@+id/point4"
                app:layout_constraintTop_toTopOf="@+id/point4" />

            <EditText
                android:id="@+id/x3"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point3"
                app:layout_constraintStart_toEndOf="@+id/point3"
                app:layout_constraintTop_toTopOf="@+id/point3" />

            <EditText
                android:id="@+id/x2"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point2"
                app:layout_constraintStart_toEndOf="@+id/point2"
                app:layout_constraintTop_toTopOf="@+id/point2" />

            <TextView
                android:id="@+id/point5"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:text="Point 5 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/point6"
                app:layout_constraintEnd_toEndOf="@+id/point6"
                app:layout_constraintStart_toStartOf="@+id/point6"
                app:layout_constraintTop_toBottomOf="@+id/point4" />

            <TextView
                android:id="@+id/point3"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:text="Point 3 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/point4"
                app:layout_constraintEnd_toEndOf="@+id/point4"
                app:layout_constraintStart_toStartOf="@+id/point4"
                app:layout_constraintTop_toBottomOf="@+id/point2" />

            <TextView
                android:id="@+id/point4"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:text="Point 4 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/point5"
                app:layout_constraintEnd_toEndOf="@+id/point5"
                app:layout_constraintStart_toStartOf="@+id/point5"
                app:layout_constraintTop_toBottomOf="@+id/point3" />

            <TextView
                android:id="@+id/point2"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:text="Point 2 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/point3"
                app:layout_constraintEnd_toEndOf="@+id/point3"
                app:layout_constraintStart_toStartOf="@+id/point3"
                app:layout_constraintTop_toBottomOf="@+id/point1" />

            <TextView
                android:id="@+id/point1"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Point 1 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/point2"
                app:layout_constraintEnd_toEndOf="@+id/point2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/point6"
                android:layout_width="107dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:text="Point 6 (x,y)"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/point5" />

            <EditText
                android:id="@+id/x5"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/point5"
                app:layout_constraintStart_toEndOf="@+id/point5"
                app:layout_constraintTop_toTopOf="@+id/point5" />

            <Button
                android:id="@+id/plot"
                android:layout_width="62dp"
                android:layout_height="42dp"
                android:text="Plot"
                app:layout_constraintBottom_toBottomOf="@+id/y4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@+id/y3"
                app:layout_constraintTop_toTopOf="@+id/y3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>